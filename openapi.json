{
  "openapi": "3.0.0",
  "info": {
    "title": "DummyJSON Test API",
    "version": "1.0.0",
    "description": "Minimal spec for testing live API calls in Tawk.to"
  },
  "servers": [
    {
      "url": "https://dummyjson.com"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "Get all products",
        "responses": {
          "200": {
            "description": "A list of products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "products": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer" },
                          "title": { "type": "string" },
                          "price": { "type": "number" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
